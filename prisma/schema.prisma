generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Talker {
  id        String    @id @default(uuid())
  name      String
  email     String
  password  String
  age       Int
  watchedAt DateTime? @default(now())
  rate      Int
  userId    String
  user      User      @relation(fields: [userId], references: [id])

  @@map("talkers")
}

model User {
  id       String   @id @default(uuid())
  name     String
  password String
  email    String
  Talker   Talker[]
}
